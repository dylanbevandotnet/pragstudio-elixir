{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build file",
            "type": "shell",
            "command": "elixir ${relativeFile}",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "iex file",
            "type": "shell",
            "command": "iex ${relativeFile}"
        },
        {
            "label": "iex project",
            "type": "shell",
            "command": "iex -S mix",
            "options": {
                "cwd": "${workspaceFolder}/servy"
            }
        }
    ]
}